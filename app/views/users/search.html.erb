<% if @user_or_book == "1" %>
 <h1>User</h1>
    <table class="table">
      <thead>
        <tr>
          <th class='table-name'>Image</th>
          <th class='table-name'>Name</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <% @users.each do |user| %>
      <tbody>
        <tr>
          <td><%= attachment_image_tag user,:profile_image, size: '100x100', fallback: "no_image.jpg" %></td>
          <td><%= user.name %> </td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <% elsif @user_or_book == "2" %>
      <h2>Book</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th class='table-name'>Title</th>
              <th class='table-name'>Opinion</th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag book.user, :profile_image, size: "100x100", fallback: "no_image.jpg" %></td>
              <td><%= link_to book.title, "/books/#{book.id}" %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
<% else %>
<% end %>