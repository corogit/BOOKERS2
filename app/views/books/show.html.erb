<p id="notice"><%=  notice %></p>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            
<%= render 'books/list1', user:@book.user %>
<%= render 'books/list2', book:@newbook %>

        </div>
        <div class="col-md-8 offset-md-1">
<h1>Book detail</h1>

<table class="table table-hover">
  <tr>
    <td><%= link_to user_path(@book.user) do%>
        <%= attachment_image_tag @book.user, :profile_image, size: "20 x 20", fallback: "no_image.jpg" %><% end %>
        <%= link_to @book.user.name, user_path(@book.user) %></td>
    <td><%= link_to @book.title %></td>
    <td><%= @book.body %></td>
  </tr>
</table>

<% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book) %>
    <%= link_to book_path(@book), method: :delete, data: { confirm: 'Are you sure?' } do %>

    <i class="uk-icon-times"></i>
    <%= t('buttons.destroy') %>
<% end %>
        </div>
    </div>
</div>
<% end %>