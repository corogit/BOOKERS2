<p id="notice"><%=  notice %></p>
<div class="container">
    <div class="row">
        <div class="col-md-3">

          <%= render 'books/list1', user:@book.user %>
          <%= render 'books/list2', book:@newbook %>

        </div>
        <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>

            <table class="table">
              <tr>
                <td><%= link_to user_path(@book.user) do%>
                    <%= attachment_image_tag @book.user, :profile_image, size: "100x100", fallback: "no_image.jpg" %><% end %></br>
                    <%= link_to @book.user.name, user_path(@book.user) %>
                </td>
                <td><%= link_to @book.title %>
                </td>
                <td><%= @book.body %>
                </td>
                <td>
                  <% if @book.favorited_by?(current_user) %>
                    <p>
                      <%= link_to book_favorites_path(@book), method: :delete do %>
                      ♥<%= @book.favorites.count %>
                  <% end %>
                    </p>
                  <% else %>
                    <p>
                      <%= link_to book_favorites_path(@book), method: :post do %>
                      ♡<%= @book.favorites.count %>
                      <% end %>
                    </p>
                  <% end %>
                </td>

                <% if @book.user == current_user %>
                <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %>
                </td>
                <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger", data: { confirm: 'Are you sure?' }  %>
                </td>
                <% end %>
              </tr>
            </table>
            <div class="comments_<%= @book.id %>">
              <%= render 'book_comments/comments', book: @book, book_comment: @book_comment %>
            </div>


        </div>
    </div>
</div>