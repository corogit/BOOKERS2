<%= render 'books/list1', user:@user %>
<%= render 'books/list2', book:@book %>


 <h1>Book detail</h1>
<table class="table table-hover">
  <% @books.each do |book| %>
  <tr>
    <td><%= attachment_image_tag @book, :image %></td>
    <td><%= @book.user.name %></</td>
    <td><%= link_to @book.title %></td>
    <td><%= @book.body %></td>
  </tr>
  <% end %>
</table>

<% if @book.user == current_user %>
    <%= link_to "Destroy", book_path(@book), method: :delete %>
<% end %>