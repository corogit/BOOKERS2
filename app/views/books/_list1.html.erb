<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, size: '100x100', fallback: "no_image.jpg" %>
<table class='table'>
    <tbody>
        <tr></tr>
        <tr>
            <th>name</th>
            <th><%= user.name %></th>
        </tr>
        <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
        </tr>
        <tr>
            <th>Follows</th>
            <td><%= link_to "#{user.followings.count}", followings_user_path(user.id) %></td>
            <th></th>
        </tr>
        <tr>
            <th>Followers</th>
            <td><%= link_to user.followers.count, followers_user_path(user.id) %></td>
            <th></th>
        </tr>
    </tbody>
</table>




<%= render "relationships/follow_button", user: user %>
